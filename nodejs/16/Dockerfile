FROM        --platform=$TARGETOS/$TARGETARCH node:16-bullseye-slim

LABEL       author="Michael Parker" maintainer="parker@pterodactyl.io"

RUN         apt update \
            && apt -y install ffmpeg iproute2 git sqlite3 libsqlite3-dev python3 python3-dev ca-certificates dnsutils tzdata zip tar curl build-essential libtool iputils-ping libnss3 php sudo \
            && useradd -m -d /home/container container 

RUN         npm install npm@9.8.1 typescript ts-node @types/node --location=global

RUN 		mkdir -p /var/www/sessions

RUN 		echo 'session.save_path = "/var/www/sessions"' >> /usr/local/etc/php/php.ini

RUN 		chmod 733 /var/www/sessions

USER        container
ENV         USER=container HOME=/home/container
WORKDIR     /home/container

COPY        ./../entrypoint.sh /entrypoint.sh
CMD         [ "/bin/bash", "/entrypoint.sh" ]
